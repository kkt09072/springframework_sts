<configuration>
	<!-- SQL의 결과나 입력 DTO를 지정하는 부분 -->
	<!-- typeAliases 태그 내부에는 typeAlias 태그로 각종 DTO를 설정  -->
	<!-- package 태그로 해당하는 여러 DTO 클래스를 하나의 패키지로 설정  -->
	<!-- 별도의 각주는 사용하지 않는 것이 좋으며, 중복되어서도 안됨.  -->
	<!-- 기본 타입은 설정하지 않으며, 참조형이어야 함 -->
	<typeAliases>
		<package name="com.spring1" />
<!--	<typeAlias type="com.spring1.dto.Apple" alias="Apple" />
		<typeAlias type="Java.lang.String" alias="String"/> -->
	</typeAliases>
</configuration>